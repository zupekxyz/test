<body>
    <div class="container">
        <h1>vemy.ru</h1>
        <div class="login-box">
            <input type="text" id="key" class="input-field" placeholder="np: asd^^&$kdshj" onclick="clearPlaceholder()" onblur="restorePlaceholder()">
            <button class="login-button" onclick="login()">Login</button>
            <div id="error-message" class="error-message" style="display: none;">Zły login</div>
        </div>
    </div>

    <script>
        function clearPlaceholder() {
            const input = document.getElementById('key');
            input.placeholder = '';  // Usuwa placeholder przy kliknięciu
        }

        function restorePlaceholder() {
            const input = document.getElementById('key');
            if (input.value === '') {
                input.placeholder = 'np: asd^^&$kdshj';  // Przywraca placeholder, jeśli pole jest puste
            }
        }

        function login() {
            const key = document.getElementById('key').value;
            const errorMessage = document.getElementById('error-message');

            if (key === "awsd!1") {
                alert("Zalogowano pomyślnie!");
                errorMessage.style.display = 'none';
            } else {
                errorMessage.style.display = 'block';  // Pokazuje komunikat o błędnym loginie
            }
        }
    </script>
</body>
